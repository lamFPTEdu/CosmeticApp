<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style cho nút với màu hồng đặc trưng -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#A10550</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Style cho nút "Hủy" với viền hồng -->
    <style name="CustomCancelButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">#A10550</item>
        <item name="android:textColor">#A10550</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="knowMorebutton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
    </style>
</resources>
