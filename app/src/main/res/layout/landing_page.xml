<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F8F4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Banner Section -->
            <RelativeLayout
                android:id="@+id/rgbaepa0qd45_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rgbaepa0qd45"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/ba"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignBottom="@id/rgbaepa0qd45"
                    android:padding="16dp"
                    android:background="@drawable/gradient_overlay">
                    <TextView
                        android:id="@+id/rk8vuv9p76e"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Unlock Your Natural Glow"
                        android:shadowColor="#66000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/know_more_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/white_outline_box"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="10dp"
                            android:text="Know More"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Indicator Dots -->
            <LinearLayout
                android:id="@+id/rqvgl552pwu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/active_dot"/>
                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/inactive_dot"/>
                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/inactive_dot"/>
            </LinearLayout>

            <!-- Categories Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="#0C0C0C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="Products' categories" />

                <!-- Categories Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Makeup Category -->
                    <LinearLayout
                        android:id="@+id/makeup_category_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/makeupimage"
                            android:scaleType="fitXY" />

                        <TextView
                            android:textColor="#0C0C0C"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="make up" />
                    </LinearLayout>

                    <!-- Skincare Category -->
                    <LinearLayout
                        android:id="@+id/skincare_category_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/skincareimage"
                            android:scaleType="fitXY" />

                        <TextView
                            android:textColor="#0C0C0C"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="skincare" />
                    </LinearLayout>

                    <!-- Gifts Category -->
                    <LinearLayout
                        android:id="@+id/gifts_category_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/giftsimage"
                            android:scaleType="fitXY" />

                        <TextView
                            android:textColor="#0C0C0C"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Gifts &amp; sets" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Best Sellers Section -->
            <LinearLayout
                android:id="@+id/r34ehdgiyw3s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBEFF2"
                android:paddingVertical="16dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/racjjbhpt5si"
                    android:textColor="#0C0C0C"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="31dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Virtual Skincare Analysis"
                    />

                <ImageView
                    android:id="@+id/rcwtuuvnqif"
                    android:layout_width="match_parent"
                    android:layout_height="198dp"
                    android:layout_marginBottom="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/skincareanalyzie" />

                <TextView
                    android:id="@+id/r1f0c6ifujty"
                    android:textColor="#0C0C0C"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="21dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Looking for a full skincare routine? Our NEW Virtual Skincare Analysis Tool evaluates your skin and provides the most personalized recommendations. "
                    />

                <LinearLayout
                    android:id="@+id/rhfoqxwae6o9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <!-- Answer Questions TextView -->
                    <TextView
                        android:id="@+id/answer_questions_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:text="Answer a Few Questions"
                        android:textColor="#A10550"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Take Selfie Button -->
                    <Button
                        android:id="@+id/take_selfie_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A10550"
                        android:paddingVertical="12dp"
                        android:text="Take a Selfie"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
