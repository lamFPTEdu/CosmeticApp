<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/product_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="712dp"
        android:layout_weight="1"
        android:background="#F9F8F4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="12dp"
                android:text="Beautya Prestige LA Micro-Huile De Rose Advanced Serum"
                android:textColor="#A10550"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"
                android:text="Anti-aging face serum"
                android:textColor="#0C0C0C"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_skin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:text="all types of skin"
                android:textColor="#606060"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp"
                android:text="$520.00"
                android:textColor="#0C0C0C"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/product_promotion_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="#FBEFF2"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <LinearLayout
                    android:id="@+id/product_promotion_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/product_promotion_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_giftcard" />

                    <TextView
                        android:id="@+id/product_promotion_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nhận 2 mẫu miễn phí khi bạn chi tiêu 2.000.000đ"
                        android:textColor="#79043C"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_promotion_message2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/product_promotion_icon2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_discount" />

                    <TextView
                        android:id="@+id/product_promotion_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nhận được 50.000đ khi bạn trả lại 5 sản phẩm đã dùng hết"
                        android:textColor="#79043C"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_promotion_message3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/product_promotion_icon3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_question_answer" />

                    <TextView
                        android:id="@+id/product_promotion_text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nhận tư vấn chuyên gia miễn phí tại các chi nhánh"
                        android:textColor="#79043C"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar cho nút "Bỏ vào giỏ hàng" -->
    <LinearLayout
        android:id="@+id/product_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Bỏ vào giỏ hàng"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/cart_button_background"
            android:drawableStart="@drawable/ic_add_to_cart"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="8dp"/>
    </LinearLayout>
</LinearLayout>
